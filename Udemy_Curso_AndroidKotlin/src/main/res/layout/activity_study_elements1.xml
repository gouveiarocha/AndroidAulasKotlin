<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".studies.Elementos_Secoes_19_38.StudyElementsActivity1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif"
        android:gravity="center_horizontal"
        android:lineSpacingExtra="10dp"
        android:text="Elemento de texto..."
        android:textAllCaps="true"
        android:textColor="#DA1111"
        android:textSize="50dp"
        android:textStyle="italic" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hint"
        android:imeOptions="actionSearch"
        android:inputType="numberPassword" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_margin="8dp"
        android:background="#142475" />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_headphonemic"
        android:tint="@color/darkBlue" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="check box teste"
        android:textColor="@color/purple_200"
        android:textSize="20sp" />

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_margin="8dp"
        android:background="#142475" />

    <!--Exercicio-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/estudoelementos2_check_fill_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Preenchimento com cor..." />

        <ImageView
            android:id="@+id/estudoelementos2_img_android"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_android"
            android:tint="@color/black" />

    </LinearLayout>

</LinearLayout>