<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".studies.Layouts_Secoes_19_25_32.ConstraintLayout.EstudoConstraintLayoutExercicio2">

    <View
        android:id="@+id/estudoconstraintlayoutex2_view_header"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:background="#855E53"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cappuccino"
        android:textColor="#fff"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="@id/estudoconstraintlayoutex2_view_header"
        app:layout_constraintLeft_toLeftOf="@id/estudoconstraintlayoutex2_view_header"
        app:layout_constraintRight_toRightOf="@id/estudoconstraintlayoutex2_view_header"
        app:layout_constraintTop_toTopOf="@id/estudoconstraintlayoutex2_view_header" />

    <ImageView
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/estudoconstraintlayoutex2_img_clock"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_clock"
        android:tint="#855E53"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/estudoconstraintlayoutex2_img_favorite"
        app:layout_constraintTop_toBottomOf="@id/estudoconstraintlayoutex2_view_header" />

    <ImageView
        android:id="@+id/estudoconstraintlayoutex2_img_favorite"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:src="@drawable/ic_favorite"
        android:tint="#855E53"
        app:layout_constraintLeft_toRightOf="@id/estudoconstraintlayoutex2_img_clock"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/estudoconstraintlayoutex2_view_header" />

    <TextView
        android:id="@+id/estudoconstraintlayoutex2_txt_minutos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15 minutos"
        app:layout_constraintLeft_toLeftOf="@id/estudoconstraintlayoutex2_img_clock"
        app:layout_constraintRight_toRightOf="@id/estudoconstraintlayoutex2_img_clock"
        app:layout_constraintTop_toBottomOf="@id/estudoconstraintlayoutex2_img_clock" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="54214"
        app:layout_constraintLeft_toLeftOf="@id/estudoconstraintlayoutex2_img_favorite"
        app:layout_constraintRight_toRightOf="@id/estudoconstraintlayoutex2_img_favorite"
        app:layout_constraintTop_toBottomOf="@id/estudoconstraintlayoutex2_img_favorite" />

    <View
        android:id="@+id/estudoconstraintlayoutex2_view_separator"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_margin="16dp"
        android:background="#855E53"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/estudoconstraintlayoutex2_txt_minutos" />

    <TextView
        android:id="@+id/estudoconstraintlayoutex2_txt_descricao"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Uma simples e perfeitamente extraída dose de espresso misturado com leite fresco e chocolate fazem esta bebida deliciosa."
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/estudoconstraintlayoutex2_view_separator" />

    <TextView
        android:id="@+id/estudoconstraintlayoutex2_txt_ingredientes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:text="Ingredientes"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/estudoconstraintlayoutex2_txt_descricao" />

    <ImageView
        android:id="@+id/estudoconstraintlayoutex2_img_ingrediente1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_chevron_right"
        android:tint="#855E53"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/estudoconstraintlayoutex2_txt_ingredientes" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 dose espresso"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/estudoconstraintlayoutex2_img_ingrediente1"
        app:layout_constraintLeft_toRightOf="@id/estudoconstraintlayoutex2_img_ingrediente1"
        app:layout_constraintTop_toTopOf="@id/estudoconstraintlayoutex2_img_ingrediente1" />

    <ImageView
        android:id="@+id/estudoconstraintlayoutex2_img_ingrediente2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_chevron_right"
        android:tint="#855E53"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/estudoconstraintlayoutex2_img_ingrediente1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="100ml leite"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/estudoconstraintlayoutex2_img_ingrediente2"
        app:layout_constraintLeft_toRightOf="@id/estudoconstraintlayoutex2_img_ingrediente2"
        app:layout_constraintTop_toTopOf="@id/estudoconstraintlayoutex2_img_ingrediente2" />

    <ImageView
        android:id="@+id/estudoconstraintlayoutex2_img_ingrediente3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:src="@drawable/ic_chevron_right"
        android:tint="#855E53"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/estudoconstraintlayoutex2_img_ingrediente2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1 colher de chocolate em pó"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/estudoconstraintlayoutex2_img_ingrediente3"
        app:layout_constraintLeft_toRightOf="@id/estudoconstraintlayoutex2_img_ingrediente3"
        app:layout_constraintTop_toTopOf="@id/estudoconstraintlayoutex2_img_ingrediente3" />

</androidx.constraintlayout.widget.ConstraintLayout>